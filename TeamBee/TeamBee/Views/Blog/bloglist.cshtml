
@{
    ViewData["Title"] = "bloglist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Breadcrumbs Area -->
<div class="breadcrumbs-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs text-center text-white">
                    <h3 class="text-uppercase">Tin Tức</h3>
                    <ul class="breadcrumbs-list">
                        <li>
                            <a href="~/home" title="Return to Home">Trang chủ</a>
                        </li>
                        <li>/</li>
                        <li>Tin Tức</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Of Breadcrumbs Area -->
<!-- Start page content -->
<section id="page-content" class="page-wrapper">
    <!-- Start Blog Page Area -->
    <div class="blog-page-area section-padding">
        <div class="container">
            <div class="row">
                @*<div class="blog-list mb-30 clearfix">*@
                @foreach (var item in ViewBag.allblog)
                {
                <div class="col-md-4 col-sm-6">
                    <div class="single-blog">
                        <div class="blog-image">
                            <a href="#">
                                <img style ="width:100%; height:190px; object-fit:fill " src="~/imgVETA/@item.Thumbnail">
                            </a>
                        </div>
                        <div class="blog-content pb-20 text-center">
                            <div class="date-added mb-20 pt-20"><i class="zmdi zmdi-time mr-10"></i>@item.DateCreate.ToString("dd/MM/yyyy") </div>
                            <h5><a class="blog-title text-capitalize" href="#">@item.Title</a></h5>
                            @*<div class="post-info-author mt-30">
                                <span class="author mr-20">
                                    <i class="zmdi zmdi-account"></i>
                                    By
                                    <a href="#" title="Posts by admin"> A Mollik </a>
                                </span>
                                <span class="comments-count mr-20">
                                    <i class="zmdi zmdi-favorite"></i>
                                    20 Likes
                                </span>
                                <span class="comments-count">
                                    <i class="zmdi zmdi-comments"></i>
                                    02 Comments
                                </span>
                            </div>*@
                        </div>
                        <div class="blog-content blog-content-overlay pb-20 text-center">
                            <div class="date-added mb-20 pt-20"><i class="zmdi zmdi-time mr-10"></i>@item.DateCreate.ToString("dd/MM/yyyy") </div>
                            <h5><a class="blog-title text-capitalize" href="~Blog/@item.CateUrl/@item.BlogUrl">@item.Title</a></h5>
                            <p style="overflow:hidden; height:72px;">@item.Content.</p>
                                @*<div class="post-info-author mt-30">
                                    <span class="author mr-20">
                                        <i class="zmdi zmdi-account"></i>
                                        By
                                        <a href="#" title="Posts by admin"> A Mollik </a>
                                    </span>
                                    <span class="comments-count mr-20">
                                        <i class="zmdi zmdi-favorite"></i>
                                        20 Likes
                                    </span>
                                    <span class="comments-count">
                                        <i class="zmdi zmdi-comments"></i>
                                        02 Comments
                                    </span>
                                
                                </div>*@
                            <a href="~/Blog/@item.CateUrl/@item.BlogUrl" class="button extra-small mt-60 text-uppercase">
                                <span>Chi Tiết</span>
                            </a>
                        </div>
                    </div>
                </div>
                }
                  
                
            </div>
        </div>
    </div>
    <!-- End Blog Page Area -->

</section>
<!-- End page content -->
