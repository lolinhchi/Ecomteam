@model TeamBee.Models.QuangCao
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Sửa Quảng Cáo";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

<div id="main-content">
    <!-- BEGIN Page Title -->
    <!-- END Page Title -->
    <!-- BEGIN Breadcrumb -->
    <div id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Home/Index">Trang chủ</a>
                <span class="divider"><i class="fa fa-angle-right"></i></span>
            </li>
            <li class="active">Sửa Quảng Cáo</li>
        </ul>
    </div>
    <!-- END Breadcrumb -->
    <!-- BEGIN Main Content -->
    <div class="row" id="result">
        <div class="col-md-12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="fa fa-table"></i> THÔNG TIN</h3>
                    <div class="box-tool">
                        <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                        <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                    </div>
                </div>

                <div class="box-content">
                    <form asp-action="SuaQuangCao" asp-controller="QuangCao" class="form-horizontal" id="validation-form" method="post" enctype="multipart/form-data">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        <input value="@Model.Id" name="Id" id="Id" hidden="hidden" />

                                    </div>

                                    <div class="form-group">
                                        <label class="  col-sm-3 col-md-2 col-lg-2 control-label" for="Price">Tên:</label>
                                        <div class=" col-sm-6 col-md-3 col-lg-4 controls">
                                            <input required type="text" value="@Model.Ten" name="Ten" id="Ten" class="form-control" data-rule-required="true" data-rule-minlength="3" />
                                        </div>
                                        <label class=" col-sm-3 col-md-2 col-lg-2 control-label" for="SalePrice">Phần Trăm :</label>
                                        <div class="  col-sm-6 col-md-3 col-lg-4 controls">
                                            <input required type="text" value="@Model.PhanTram" name="PhanTram" id="PhanTram" class="form-control" data-rule-required="true" data-rule-minlength="3" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="  col-sm-3 col-md-2 col-lg-2 control-label" for="Price">Liên Kết:</label>
                                        <div class=" col-sm-6 col-md-3 col-lg-4 controls">
                                            <input required type="text" value="@Model.LienKet" name="LienKet" id="LienKet" class="form-control" data-rule-required="true" data-rule-minlength="6" />
                                        </div>

                                    </div>
                                </div>




                                <div class="col-lg-3" style="text-align:center">
                                    <div>
                                        <div class="form-group">
                                            <img id="output" style="width:280px; height:350px; object-fit:fill" src="~/imgVETA/@Model.Anh" />
                                        </div>
                                        <div class="form-group">
                                            <label for="file-upload" class="custom-file-upload1" style=" margin-top:20px;border: 1px solid #ccc;display: inline-block;padding: 6px 12px;cursor: pointer;">
                                                <i class="fa fa-cloud-upload" id="tenanh">@Model.Anh</i>
                                            </label>
                                            <script>
                                                var loadFile = function (event) {
                                                    var reader = new FileReader();
                                                    reader.onload = function () {
                                                        var output = document.getElementById('output');
                                                        output.src = reader.result;

                                                    };
                                                    reader.readAsDataURL(event.target.files[0]);
                                                    // console.log(event.target.files[0].name);

                                                    document.getElementById("tenanh").innerHTML = event.target.files[0].name;
                                                };
                                            </script>
                                            <input id="file-upload" name="Anh" type="file" style="display: none;" onchange="loadFile(event)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                                            <input type="submit" class="btn btn-primary" value="Xác nhận">
                                            <a href="~/QuangCao/index" class="btn">Hủy bỏ</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END Main Content -->

    <footer>
        <p>2020 © Bee</p>
    </footer>

    <a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>
</div>




<script>

    function Caculate() {
        var price = parseInt(document.getElementById("Price").value, 10);

        var sale = parseInt(document.getElementById("SalePrice").value, 10);
        var sold = price - (price / 100) * sale;
        document.getElementById("GiaSale").value = sold;
    }
</script>