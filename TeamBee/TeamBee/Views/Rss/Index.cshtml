    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Breadcrumbs Area -->
<div class="breadcrumbs-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs text-center text-white">
                    <h3 class="text-uppercase">Tin Tức</h3>
                    <ul class="breadcrumbs-list">
                        <li>
                            <a href="~/home" title="Return to Home">Trang chủ</a>
                        </li>
                        <li>/</li>
                        <li>Tin Tức Sức khỏe</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Of Breadcrumbs Area -->
